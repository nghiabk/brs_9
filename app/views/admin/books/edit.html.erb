<h1>Update Book</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @book], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label "Category" %>
      <%= f.select :category_id, @categories %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :author %>
      <%= f.text_field :author, class: "form-control" %>
      <%= f.label "Publish date" %>
      <%= f.date_field :publish_date, class: "form-control" %>
      <%= f.label "Number Pages" %>
      <%= f.number_field :number_page, in: 1...1000, class: "form-control" %>
      <%= image_tag @book.image.url if @book.image? %><br>
      <%= f.label "Choose Image" %>
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", 
                               id: "upload" %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>