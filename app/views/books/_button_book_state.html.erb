<% if current_user.state_of_book(@book).nil? %>
  <%= button_to "Unread", book_states_path(book_state: {book_id: @book.id, user_id: current_user.id, state: "Reading"}), remote: true, class: "btn btn-primary" %>
<% elsif current_user.review_for_book(@book).nil? %>
  <%= button_to "#{current_user.state_of_book(@book).state}", book_state_path(current_user.state_of_book(@book), book_state: {book_id: @book.id, user_id: current_user.id, state: "Read"}), method: :patch, remote: true, class: "btn btn-primary", id: "submit-state-book" %>
<% else %>
  <%= button_to "Read", {}, disabled: true, class: "btn btn-primary" %>
<% end %>
