<% if current_user.load_books(:favorite, @book).nil? %>
  <%= button_to "Mark favorite", favorites_path(favorite: {book_id: @book.id, user_id: current_user.id}), remote: true, class: "btn btn-primary" %>
<% else %>
  <%= button_to "Favorited", {}, disabled: true, class: "btn btn-primary" %>
<% end %> 