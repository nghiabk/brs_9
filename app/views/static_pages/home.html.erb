<% provide :title, 'Home' %>
<% @user ||= current_user %>
<% unless user_signed_in? %>
  <div class='center jumbotron'>
    <h1>Welcome to the Book Review System</h1>
    <h2>
      This is the home page for the
      <%= link_to 'Book Review System', root_path %>
      at Framgia company
    </h2>
    <h2>If you don't have a account, Please Sign Up now!</h2>
    <%= link_to 'Sign up now!', new_user_registration_path, class: 'btn btn-lg 
      btn-primary' %>
  </div>
<% else %>  
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
  </div>
<% end %> 